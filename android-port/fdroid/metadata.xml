<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="stylesheet.xsl"?>
<application>
  <id>org.taijos.os</id>
  <name>TaijiOS</name>
  <icon>default/repo/icons/taijos.png</icon>
  <version>0.1.0</version>
  <versioncode>1</versioncode>
  <license>GPL-2.0-or-later</license>
  <description>
    <p>TaijiOS is an Inferno-inspired operating system that runs on Android devices.
    It provides a complete Plan 9/Inferno environment with a native window manager
    and the Kryon declarative UI framework.</p>

    <p>Features:</p>
    <ul>
      <li>Native ARM64 execution</li>
      <li>Window Manager with touch support</li>
      <li>Kryon UI framework</li>
      <li>Dis VM (portable bytecode interpreter)</li>
      <li>OpenGL ES hardware-accelerated graphics</li>
    </ul>

    <p>This is an early release. Please report bugs at GitHub.</p>
  </description>

  <source>https://github.com/yourname/TaijiOS</source>
  <tracker>https://github.com/yourname/TaijiOS/issues</tracker>

  <builds>
    <build>
      <version>0.1.0</version>
      <versioncode>1</versioncode>
      <ndk>r25</ndk>
      <gradle>yes</gradle>

      <!-- Subdirectory with the build -->
      <subdir>android-port</subdir>

      <!-- Build commit -->
      <commit>HEAD</commit>

      <!-- Timeout for build -->
      <timeout>1800</timeout>

      <!-- Archives to fetch from source repo -->
      <archive>https://github.com/yourname/TaijiOS/archive/refs/tags/v0.1.0.tar.gz</archive>
    </build>

    <!-- ARM64 build -->
    <build>
      <version>0.1.0</version>
      <versioncode>1</versioncode>
      <ndk>r25</ndk>
      <gradle>yes</gradle>
      <subdir>android-port</subdir>
      <commit>HEAD</commit>

      <arch>arm64-v8a</arch>
      <archive>https://github.com/yourname/TaijiOS/archive/refs/tags/v0.1.0.tar.gz</archive>
    </build>

    <!-- ARM32 build for older devices -->
    <build>
      <version>0.1.0</version>
      <versioncode>1</versioncode>
      <ndk>r25</ndk>
      <gradle>yes</gradle>
      <subdir>android-port</subdir>
      <commit>HEAD</commit>

      <arch>armeabi-v7a</arch>
      <archive>https://github.com/yourname/TaijiOS/archive/refs/tags/v0.1.0.tar.gz</archive>
    </build>
  </builds>

  <!-- Suggested categories -->
  <category>System</category>
  <category>Terminal</category>
  <category>Development</category>

  <!-- Anti-features (none) -->
  <anti-features/>

  <!-- Permissions -->
  <permissions>
    <permission name="android.permission.INTERNET" required="false"/>
    <permission name="android.permission.READ_EXTERNAL_STORAGE" required="false"/>
    <permission name="android.permission.WRITE_EXTERNAL_STORAGE" required="false"/>
  </permissions>

  <!-- Requirements -->
  <requires>
    <android min="21" max="34"/>
    <gles version="0x00030000" required="true"/>
  </requires>

  <!-- Screenshots (to be added) -->
  <!--
  <screenshot>default/repo/screenshots/main.png</screenshot>
  <screenshot>default/repo/screenshots/wm.png</screenshot>
  <screenshot>default/repo/screenshots/kryon.png</screenshot>
  -->
</application>
